<div class="border" style="height: 100%">
  <div id="title" class="m-2 d-flex justify-content-between">
    <div class="text-secondary">
      <b>@Title</b>
    </div>
    <div>
      <span class=@("badge bg-"+TimeFrameColor)>
        <small>@TimeFrame</small>
      </span>
    </div>
  </div>
  <hr />
  <div id="body" class="m-2">
    <div class="display-5 text-secondary">@Number</div>
    <div class="d-flex justify-content-between my-3 small">
      <div>
        @IndicatorTitle
      </div>
      <div class=@(IsPositiveChange ? "text-success" : "text-danger" )>
        <span class="me-1">@IndicatorPercentage</span>
        @if (IsPositiveChange)
        {
          <i class="fal fa-arrow-up"></i>
        }
        else
        {
          <i class="fal fa-arrow-down"></i>
        }
      </div>
    </div>
  </div>
</div>