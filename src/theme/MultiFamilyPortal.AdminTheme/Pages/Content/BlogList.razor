@page "/admin/posts"
@using MultiFamilyPortal.AdminTheme.Components.Blog

<SiteTitle Title="Blog Posts" />

<Animation OptionsName="Page">
  <h1>Blog Posts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Published</th>
        <th>Status</th>
        <th>Views</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var post in _posts)
      {
        <PostListing Post="@post" />
      }
    </tbody>
  </table>

  <button class="btn btn-primary" @onclick="CreatePost">Create Post</button>
</Animation>
